{
  "name": "widgets",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joeguo911/widgets.git"
  },
  "author": "joe.guo <joe.guo@crypto.com>",
  "license": "MIT",
  "scripts": {
    "pkg": "manypkg run",
    "check:pkgs": "manypkg check",
    "fix:pkgs": "manypkg fix",
    "build": "lerna run build",
    "prestart": "yarn && yarn bootstrap",
    "boot": "yarn prestart && yarn build",
    "clean": "lerna clean --yes && rimraf node_modules",
    "clean-dist": "yarn lerna exec -- rimraf dist",
    "commit": "git-cz",
    "release": "changeset publish"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "resolutions": {
    "**/react": "17.0.1",
    "**/react-dom": "17.0.1",
    "@popperjs/core": "2.4.4"
  },
  "version": "1.0.0",
  "dependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/runtime": "^7.15.3",
    "@changesets/cli": "^2.16.0",
    "@manypkg/cli": "^0.18.0",
    "@types/node": "^14.14.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^6.2.1",
    "cross-env": "7.0.3",
    "dotenv-cli": "4.0.0",
    "esm": "3.2.25",
    "lerna": "3.22.1",
    "lodash": "^4.17.21",
    "rimraf": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0"
  }
}
